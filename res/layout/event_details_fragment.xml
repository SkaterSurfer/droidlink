<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout1" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="wrap_content" android:id="@+id/event_type"
        android:src="@drawable/ic_sms_mms" android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" android:layout_marginLeft="4dip"
        android:layout_marginTop="4dip"></ImageView>
    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content" android:id="@+id/event_date" android:layout_height="wrap_content"
        android:text="15/09/2011 10:20" android:paddingTop="4dip" android:paddingLeft="4dip"
        android:layout_marginTop="4dip" android:layout_toRightOf="@id/event_type"
        android:layout_alignParentRight="true"></TextView>
    <ImageView android:layout_width="wrap_content" android:id="@+id/contact_picture"
        android:src="@drawable/ic_contact_picture" android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" android:layout_below="@id/event_date"
        android:layout_marginTop="16dip" android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip" android:layout_marginBottom="8dip"></ImageView>
    <TextView android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content" android:id="@+id/event_name" android:singleLine="true"
        android:layout_height="wrap_content" android:text="John Doe" android:layout_toRightOf="@id/contact_picture"
        android:layout_alignParentRight="true" android:layout_below="@id/event_date"
        android:layout_marginTop="16dip"></TextView>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content" android:id="@+id/event_number" android:singleLine="true"
        android:layout_height="wrap_content" android:text="1234567890" android:layout_below="@id/event_name"
        android:layout_alignLeft="@id/event_name" android:layout_alignParentRight="true"></TextView>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content" android:id="@+id/event_message" android:layout_height="wrap_content"
        android:text="Hello world" android:layout_below="@+id/contact_picture"
        android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
        android:layout_marginTop="8dip" android:padding="16dip" android:background="#444"></TextView>
</RelativeLayout>
