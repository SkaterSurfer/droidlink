<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="?android:attr/listPreferredItemHeight"
    android:minHeight="?android:attr/listPreferredItemHeight" android:paddingLeft="9dip"
    android:paddingRight="5dip" android:gravity="center_vertical" android:orientation="horizontal">
    <ImageView android:id="@+id/event_icon" android:src="@drawable/ic_missed_call"
        android:layout_width="wrap_content" android:layout_gravity="top" android:paddingRight="8dip"
        android:layout_height="wrap_content" android:paddingTop="8dip"></ImageView>
    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_weight="0.3">
        <TextView android:layout_height="wrap_content" android:text="John Doe"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="match_parent"
            android:id="@+id/event_name"></TextView>
        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content" android:text="1234567890"
                android:id="@+id/event_number" android:layout_width="wrap_content"
                android:ellipsize="end" android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView android:text="Hello world" android:id="@+id/event_message"
        android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical"
        android:padding="10dip" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="0.7" android:ellipsize="end"></TextView>
    <TextView android:text="Yesterday" android:id="@+id/event_date" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
    <ImageView android:id="@+id/event_call_back" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@android:color/transparent"
        android:src="@drawable/call_contact" android:padding="8dip"></ImageView>
</LinearLayout>
